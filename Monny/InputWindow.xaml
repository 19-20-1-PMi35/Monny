<Window x:Class="Monny.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Monny"
        mc:Ignorable="d"
        Title="InputWindow" Height="200" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="title" Grid.Row="0" Content="Category - " FontSize="16" HorizontalAlignment="Left" Margin="10 0 0 0"></Label>
        <Label Grid.Row="1" Content="Price:" FontSize="16" HorizontalAlignment="Left" Margin="10 0 0 0"></Label>
        <TextBox Grid.Row="2" x:Name="price" FontSize="16" Width="260" Margin="0 0 0 10" HorizontalAlignment="Center"></TextBox>
        <Button Grid.Row="3" x:Name="add" Content="Add" Width="70" Click="Add_Click" Margin="0 0 0 5" IsDefault="True"></Button>
    </Grid>
</Window>
